<%
page.layout = "links"
page.title = theme.links.title || __('links.title')
page.subtitle = theme.links.subtitle || __('links.subtitle')
page.banner_img = theme.links.banner_img
page.banner_img_height = theme.links.banner_img_height
page.banner_mask_alpha = theme.links.banner_mask_alpha
page.comment = theme.links.comments.type
%>

<% if(site.data.links.items){ %>
<div id="friend_links" class="markdown-body" style="color:var(--post-heading-color)">
  <p class="h4" style="font-weight: bold;">友情链接</p>
  <div class="row links">
    <% for(const each of site.data.links.items || []) { %>
      <% if (!each.title || !each.link) continue %>
      <div class="card col-lg-4 col-md-6 col-sm-12">
        <a href="<%= url_for(each.link) %>" class="card-body hover-with-bg" target="_blank" rel="noopener">
          <div class="card-content">
            <% if (each.avatar || each.image) { %>
              <div class="link-avatar my-auto">
                <img src="<%= url_for(each.avatar || each.image) %>" alt="<%= each.title %>"
                    onerror="this.onerror=null; this.src=this.srcset='<%= url_for(site.data.links.onerror_avatar) %>'"/>
              </div>
            <% } %>
            <div class="link-text">
              <div class="link-title"><%- each.title %></div>
              <div class="link-intro"><%- each.intro || '' %></div>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
<% } %>

<% if(site.data.ads_links.items){ %>
<div id="ads_links" class="markdown-body" style="color:var(--post-heading-color)">
  <p class="h4" style="font-weight: bold;">合作站点</h4>
  <div class="row links">
    <% for(const each of site.data.ads_links.items || []) { %>
      <% if (!each.title || !each.link) continue %>
      <div class="card col-lg-4 col-md-6 col-sm-12">
        <a href="<%= url_for(each.link) %>" class="card-body hover-with-bg" target="_blank" rel="noopener">
          <div class="card-content">
            <% if (each.avatar || each.image) { %>
              <div class="link-avatar my-auto">
                <img src="<%= url_for(each.avatar || each.image) %>" alt="<%= each.title %>"
                    onerror="this.onerror=null; this.src=this.srcset='<%= url_for(site.data.links.onerror_avatar) %>'"/>
              </div>
            <% } %>
            <div class="link-text">
              <div class="link-title"><%- each.title %></div>
              <div class="link-intro"><%- each.intro || '' %></div>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
<% } %>


<% if (site.data.links.more_content && page.content) { %>
  <div class="custom mx-auto markdown-body">
    <%- page.content %>
  </div>
<% } %>

<%- inject_point('linksComments') %>
